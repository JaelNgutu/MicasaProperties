@model IEnumerable<MicasaProperties.Models.Tenant>

@{
    ViewData["Title"] = "Index";
}



<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-md-6">
                        <div class="mb-3">
                           
                            <a  asp-action="Create" class="btn btn-success waves-effect waves-light">Add New Tenant</a>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-inline float-md-end mb-3">
                            <div class="search-box ms-2">
                                <div class="position-relative">
                                    <input type="text" class="form-control rounded bg-light border-0" placeholder="Search...">
                                    <i class="mdi mdi-magnify search-icon"></i>
                                </div>
                            </div>

                        </div>
                    </div>


                </div>

                <div class="table-responsive mb-4">
                    <table class="table table-centered table-nowrap mb-0">
                        <thead>
                            <tr>

                                <th scope="col">Name</th>
                                <th scope="col">Phone Number</th>
                                <th scope="col">Email</th>
                                <th scope="col">Building</th>
                                <th scope="col" style="width: 200px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>

                                <td>

                                    <a asp-action="Details" asp-route-id="@item.TenantID" class="text-body">@Html.DisplayFor(modelItem => item.Name)</a>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Building.BuildingName)</td>
                                <td>
                                    <ul class="list-inline mb-0">
                                        <li class="list-inline-item">
                                            <a asp-action="Edit" asp-route-id="@item.TenantID" class="px-2 text-primary"><i class="uil uil-pen font-size-18"></i></a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a asp-action="Delete" asp-route-id="@item.TenantID" class="px-2 text-danger"><i class="uil uil-trash-alt font-size-18"></i></a>
                                        </li>
                                        <li class="list-inline-item dropdown">
                                            <a class="text-muted dropdown-toggle font-size-18 px-2" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true">
                                                <i class="uil uil-ellipsis-v"></i>
                                            </a>

                                            <div class="dropdown-menu dropdown-menu-end">
                                                <a asp-action="Details" asp-route-id="@item.TenantID" class="dropdown-item" >View</a>
                                               
                                            </div>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                            }
                            </tbody>
                    </table>
                </div>
                </div>
            </div>
        </div>
    </div>

