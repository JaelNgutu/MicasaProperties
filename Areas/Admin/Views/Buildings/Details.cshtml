@model Building

@{
    ViewData["Title"] = "Details";
}


<div class="col-lg-6">
    <div class="card">
        <div class="row g-0 align-items-center">
            <div class="col-md-4">
                <img class="card-img img-fluid" src="assets/images/small/img-2.jpg" alt="Card image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">  @Html.DisplayFor(model => model.BuildingName)</h5>
                    <p class="card-text">No.Units Available : @Html.DisplayFor(model => model.UnitsAvailable) </p>
                    <p class="card-text">Cost per unit: @Html.DisplayFor(model => model.CostPerUnit)</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BuildingID">Edit</a>|
    <a asp-action="Index">Back to List</a>
</div>
