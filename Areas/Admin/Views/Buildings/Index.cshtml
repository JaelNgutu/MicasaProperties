@model IEnumerable<MicasaProperties.Models.Building>

@{
    ViewData["Title"] = "Index";
}

<div class="row">

    <div class="col-md-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <div class="float-end mt-2">
                    <div id="orders-chart"> </div>
                </div>
                <div>
                    <h4 class="mb-1 mt-1"><span data-plugin="counterup">@ViewBag.TotalBuildings</span></h4>
                    <p class="text-muted mb-0">Total number of buildings</p>
                </div>
               
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="card">
            <div class="card-body">
               
                <div>
                    <h4 class="mb-1 mt-1"><span data-plugin="counterup">@ViewBag.TotalUnits </span></h4>
                    <p class="text-muted mb-0">Total Units Available</p>
                </div>
               
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-xl-3">
        <div class="card">
            <div class="card-body">

                <div>
                    <h4 class="mb-1 mt-1">$<span data-plugin="counterup">@ViewBag.Revenue </span></h4>
                    <p class="text-muted mb-0">Full capacity revenue expected</p>
                </div>

            </div>
        </div>
    </div>
    <!-- end col-->
</div>


    <div class="row">

        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Micasa Apartments</h4>
                    <p class="card-title-desc">List of all buildings owned by  <code>Micasa Properties</code> </p>

                    <p>
                        <a asp-action="Create" class="btn btn-success waves-effect waves-light">Add New Building</a>
                    </p>

                    <div class="table-responsive">
                        <table class="table table-striped mb-0">

                            <thead>
                                <tr>

                                    <th>
                                        Building Name
                                    </th>
                                    <th>
                                        No. Of Units Available
                                    </th>
                                    <th>
                                        Cost Per Unit
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.BuildingName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UnitsAvailable)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CostPerUnit)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.BuildingID">Edit</a>|
                                            <a asp-action="Details" asp-route-id="@item.BuildingID">Details</a>|
                                            <a asp-action="Delete" asp-route-id="@item.BuildingID">Delete</a>|
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

    </div>

